<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0"/>
  <title>Daily Diet Plan</title>
  <link rel="icon" href="Images/Truth4.png">
  <link rel="stylesheet" href="/css/style.css">
  <style>
    /* Existing styles from before... */
 
.container {
  max-width: 960px;
  margin: auto;
  margin-top: 10px;
  padding: 2rem;
  background: #ffffff;
  border-radius: 1.5rem;
  box-shadow: 0 12px 30px rgba(0, 0, 0, 0.1);
  animation: fadeIn 0.5s ease-in-out;
}

.main-title {
  text-align: center;
  font-size: 2rem;
  margin-bottom: 2rem;
  color: #222;
}

.section-title {
  font-size: 1.4rem;
  margin-bottom: 1rem;
  color: #007bff;
}

.card-section {
  margin-bottom: 2rem;
  background: #f8f9fa;
  border-radius: 1rem;
  padding: 1.5rem;
  border-left: 5px solid #007bff;
}

.info-list,
.routine-list,
.tips-list {
  list-style: none;
  padding: 0;
}

.info-list li,
.routine-list li {
  padding: 0.6rem 0;
  font-size: 1rem;
}

.info-list li span,
.routine-list li span {
  font-weight: bold;
  color: #444;
  display: inline-block;
  width: 180px;
}

.tips-list li {
  padding: 0.4rem 0;
  line-height: 1.6;
}

.meal-card {
  background: #fff;
  border-radius: 1rem;
  padding: 1rem;
  margin-bottom: 1.2rem;
  border: 1px solid #ddd;
}

.meal-card h3 {
  font-size: 1.2rem;
  margin-bottom: 0.8rem;
  color: #28a745;
}

.meal-item {
  margin-bottom: 0.8rem;
  font-size: 0.95rem;
}

.meal-item .calories {
  color: #999;
  font-style: italic;
  margin-left: 0.4rem;
}

.regenerate-btn {
  display: inline-block;
  margin-top: 2rem;
  padding: 0.8rem 1.2rem;
  background-color: #28a745;
  color: white;
  text-decoration: none;
  border-radius: 0.6rem;
  font-weight: 600;
  transition: background-color 0.3s;
}

.regenerate-btn:hover {
  background-color: #28a745;
}

@keyframes fadeIn {
  from {
    opacity: 0;
    transform: translateY(20px);
  }
  to {
    opacity: 1;
    transform: translateY(0);
  }
}

  </style>
</head>
<body>
    <!-- Navbar -->
   <%- include('partials/navbar.ejs') %>
  <body>
  <div class="container">
    <h1 class="main-title">üåø Your Personalized Diet Plan</h1>

    <!-- Full Day Diet Plan -->
    <section class="card-section">
      <h2 class="section-title">üçΩÔ∏è Full Day Diet Plan</h2>
      <% for (let meal in personalizedPlan.fullDayDietPlan) { %>
        <div class="meal-card">
          <h3><%= meal.replace(/([A-Z])/g, " $1").replace(/^./, c => c.toUpperCase()) %></h3>
          <% personalizedPlan.fullDayDietPlan[meal].forEach(item => { %>
            <div class="meal-item">
              <strong><%= item.option %>:</strong>
              <p><%= item.description %> <span class="calories">(<%= item.approxCalories %> kcal)</span></p>
            </div>
          <% }) %>
        </div>
      <% } %>
    </section>

    <!-- Daily Routine -->
    <section class="card-section">
      <h2 class="section-title">üïí Daily Routine</h2>
      <ul class="routine-list">
        <% for (let key in personalizedPlan.dailyRoutine) { %>
          <li><span><%= key.replace(/([A-Z])/g, " $1").replace(/^./, c => c.toUpperCase()) %>:</span> <%= personalizedPlan.dailyRoutine[key] %></li>
        <% } %>
      </ul>
    </section>

    <!-- Tips -->
    <section class="card-section">
      <h2 class="section-title">üí° Tips for Fast Progress</h2>
      <ul class="tips-list">
        <% personalizedPlan.tipsForFasterGoalAchievement.forEach(tip => { %>
          <li>‚úÖ <%= tip %></li>
        <% }) %>
      </ul>
    </section>

    <a href="/diet-suggestion" class="regenerate-btn">Regenerate</a>
  </div>
  <!-- Footer -->
  <%- include('partials/footer.ejs') %>
</body>
</html>
