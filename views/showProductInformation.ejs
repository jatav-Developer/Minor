      </ul>
    </section>

    <section class="card review-section">
      <h2>ğŸ’¬ Customer Reviews</h2>
      <div class="reviews">
        <div>
          <h3>ğŸ‘ Positive</h3>
          <% product.customerReviews.positive.forEach(r => { %>
            <p><strong><%= r.user %>:</strong> <%= r.comment %></p>
          <% }) %>
        </div>
        <div>
          <h3>ğŸ‘ Negative</h3>
          <% product.customerReviews.negative.forEach(r => { %>
            <p class="negative"><strong><%= r.user %>:</strong> <%= r.comment %></p>
          <% }) %>
        </div>
      </div>
      <p class="summary">ğŸ§¾ <strong>Summary:</strong> <%= product.customerReviews.summary %></p>
    </section>

    <section class="note-card">
      <p>âš ï¸ <strong>Note:</strong> <%= product.importantNote %></p>
    </section>
  </main>
    <!-- Footer -->
  <%- include('partials/footer.ejs') %>
</body>
</html>
